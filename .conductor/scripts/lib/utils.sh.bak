# =============================================================================
# INSTALLATION HINTS
# =============================================================================
get_install_hint() {
    local cmd="$1"
    case "$cmd" in
        node)
            echo "Install from https://nodejs.org/ or: brew install node"
            ;;
        npm)
            echo "Usually installed with Node.js"
            ;;
        npx)
            echo "Usually installed with Node.js (comes with npm 7+)"
            ;;
        *)
            echo "Install $cmd"
            ;;
    esac
}
